generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String     @id @default(uuid())
  password  String?
  firstName  String?
  lastName   String?
  username   String?
  email     String?   @unique
  phoneNumber String? @unique
  status    Status   @default(ACTIVE)
  profileImage String?
  verified  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([email, verified])
}

model OTP {
  id      String     @id @default(uuid())
  phoneNumber   String
  code     String?
  createdAt DateTime @default(now())
  expire    DateTime
}


enum Status {
  ACTIVE
  INACTIVE  
}
